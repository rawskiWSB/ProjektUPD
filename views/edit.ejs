<!DOCTYPE html>
<head>
    <title>APP PR</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
</head>
<body>
<div class="container">
    <div class="row">
        <h1 class="display-3">Baza pracownikow by Piotr Rawski</h1>
    </div>
    <div class="row">
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Dodaj pracownika</a>
                <a class="navbar-brand" href="/list">Lista pracownikow</a>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </div>
    <div class="row">
                <% employees.forEach(details => { %>
                    <% if (details._id == idTask) { %>
                            <form action="/edit/<%= details._id %>" method="POST" class="pracownicy-header">
                                <div class="mb-3">
                                    <label for="fname" class="form-label">Imie:</label>
                                    <input type="text" name="fname" class="form-control" placeholder="Imie" value="<%= details.fname %>">
                                </div>
                                <div class="mb-3">
                                    <label for="lname" class="form-label">Nazwisko:</label>
                                    <input type="text" name="lname" class="form-control" placeholder="Nazwisko" value="<%= details.lname %>">
                                </div>
                                <div class="mb-3">
                                    <label for="stanowisko" class="form-label">Stanowisko:</label>
                                    <input type="text" name="stanowisko" class="form-control" placeholder="Stanowisko" value="<%= details.stanowisko %>">
                                </div>
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Telefon:</label>
                                    <input type="tel" name="phone" class="form-control" placeholder="Telefon" value="<%= details.phone %>">
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email:</label>
                                    <input type="email" name="email" class="form-control" placeholder="Email" value="<%= details.email %>">
                                </div>
                                <div class="btn-group me-2" role="group" aria-label="First group">
                                    <button type="submit" class="btn btn-success">Zmien dane</button>
                                    <button type="button" class="btn btn-danger" onclick="location.href='/list';">Anuluj</button>
                                </div>
                            </form>
                    <% } else { %>
                    <% } %>
                <% }) %>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

</body>